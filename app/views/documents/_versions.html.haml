-# TODO replace group with @category.group when DM works
- @group = Group.get @category.group.id

- unless @document.versions.empty?
  %p
    Version
    - @document.versions.size.times do |i|
      - j = i + 1
      - if params[:version] and params[:version].to_i.eql? j
        = j
      - else
        = link_to j, resource(group, @category, @document, :version => j)
      |
    - if params[:version]
      = link_to 'current', resource(group, @category, @document)
    - else
      current
    = "| #{link_to 'diff', resource(group, @category, @document, :diff, :version => params[:version])}" if params[:version]
