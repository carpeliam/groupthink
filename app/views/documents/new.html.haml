%h1== New doc for #{@group.name}

= error_messages_for @document

= form_for(@document, :action => resource(@group, :documents) ) do

  %p
    = text_field :title, :label => 'Title'
  %p
    = text_area :body, :label => 'Body'

  %p
    = submit "Create"

= link_to 'Back', resource(@group, :documents)
