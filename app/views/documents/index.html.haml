%h1== #{@category.name} Documents

-# TODO replace group with @category.group when DM works
- group = Group.get @category.group.id

%table
  %tr
    %th Title
  %tr
  - for document in @documents
    %tr
      %td
        = document.title
      %td
        = link_to 'Show', resource(group, @category, document)
      %td
        = link_to 'Edit', resource(group, @category, document, :edit)
      %td
        = delete_button resource(group, @category, document)

= link_to 'New', resource(group, @category, :documents, :new)
