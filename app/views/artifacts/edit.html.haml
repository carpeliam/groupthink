%h1== Edit #{@artifact.title}

= error_messages_for @artifact

= form_for(@artifact, { :action => resource(@group, @artifact), :multipart => true }) do
  %p
    = text_field :description, :label => 'Description'
    = file_field :name => 'attachment'
    = submit "Update"

= link_to 'Show', resource(@group, @artifact)
|
= link_to 'Back', resource(@group, :artifacts)
